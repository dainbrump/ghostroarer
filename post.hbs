{{!< default}}
{{> "navbar"}}

{{#post}}
    {{#if image}}
    <div class="jumbotron" style="background: url('{{image}}') center center no-repeat">
      <div class="container post-masthead"></div>
    </div>
    {{/if}}

    <div id="content" class="container" role="content">
        <div class="row">
            <div class="col-md-8">
                <article class="{{post_class}}">
                    <header class="post-header">
                        <h1 class="post-title">{{title}} <br /><small><time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time> {{tags prefix=" on "}}</small></h1>
                    </header>
                    <section class="post-content">
                        {{content}}
                    </section>
                    <footer class="post-footer container">
                        <section class="share">
                            <h4>Share this post</h4>
                            <a href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                                <i class="fa fa-twitter-square fa-2x"></i>
                                <span class="hidden">Twitter</span>
                            </a>
                            <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                                <i class="fa fa-facebook-square fa-2x"></i>
                                <span class="hidden">Facebook</span>
                            </a>
                            <a href="https://plus.google.com/share?url={{url absolute="true"}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                                <i class="fa fa-google-plus-square fa-2x"></i>
                                <span class="hidden">Google+</span>
                            </a>
                        </section>
                    </footer>
                </article>
            </div>
            <div class="col-md-4">
{{> "sidebar"}}
            </div>
        </div>
    </div>

{{/post}}
