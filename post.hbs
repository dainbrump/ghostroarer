{{!< default}}
{{> "navbar"}}

{{#post}}
    {{#if image}}
    <div class="jumbotron" style="background: url('{{image}}') center center no-repeat">
      <div class="container post-masthead"></div>
    </div>
    {{/if}}

    <div id="content" class="container" role="content">
        <div class="row">
            <div class="col-md-4">
{{> "sidebar"}}
            </div>
            <div class="col-md-8">
                <article class="{{post_class}}">
                    <header class="post-header">
                        <h1 class="post-title">{{title}} <br /><small><time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time> {{tags prefix=" on "}}</small></h1>
                    </header>
                    <section class="post-content">
                        {{content}}
                    </section>
                    <footer class="post-footer container">

                    </footer>
                </article>
            </div>
        </div>
    </div>

{{/post}}
