    {{#if @blog.cover}}
    <div class="jumbotron site-masthead" style="background: url('{{@blog.cover}}') center center no-repeat; background-size: 100%;">
      <div class="container">
        <h1>{{@blog.description}}</h1>
      </div>
    </div>
    {{/if}}
    <div id="content" class="container" role="content">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-title">Posts tagged with: {{tag.name}} <small class="page-description">A {{pagination.total}}-post collection</small></h1>
            </div>
        </div>
    </div>

    <div id="content" class="container" role="content">
        {{> "loop"}}
    </div>